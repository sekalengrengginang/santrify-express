// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// TODO relationship one to many
model User {
  id       Int  @id @default(autoincrement())
  name     String  @unique
  email    String  @unique
  password String
}

model Santri {
  id     String  @id @default(uuid())
  name   String
  image  String
  room   String
  status String? @db.Text
}

model Teachers {
  id     String  @id @default(uuid())
  name   String
  room   String
  status String? @db.Text
}

model Rooms {
  id     String  @id @default(uuid())
  name   String
  status String? @db.Text
}

model Classroom {
  id     String  @id @default(uuid())
  name   String
  image  String
  status String? @db.Text
}
