// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int  @id @default(autoincrement())
  name String @unique
  email String @unique
  password String 
  isAdmin Boolean
}

model Santri{
  id Int @id @default(autoincrement())
  name String
  room String
  classroom String
  status String @db.Text
}
model Teachers{
  id Int @id @default(autoincrement())
  name String
  room String
  status String @db.Text
}
model Rooms{
  id Int @id @default(autoincrement())
  name String
  status String @db.Text
}

model Classroom{
  id Int @id @default(autoincrement())
  name String
  status String @db.Text
}
